# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.kt]
indent_size = 4

[*.md]
max_line_length = unset
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.sql]
indent_size = 4

[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_size = 8
indent_style = tab
max_line_length = 80
